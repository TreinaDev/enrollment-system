<% unless @enrollments.empty? %>
  <table class="table table-hover">
    <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Plano</th>
          <th scope="col">Status</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @enrollments.each do |enrollment| %>
          <tr id="enrollment_<%= enrollment.id %>">
            <td scope="row"> <%= enrollment.customer.name %> </td>
            <td> <%= enrollment.plan.name %> </td>
            <% if enrollment.status == 'active' %>
              <td> <span class='badge badge-success'> <%= t(".#{enrollment.status}") %> </span> </td>
            <% elsif enrollment.status == 'pending'  %>
              <td> <span class='badge badge-primary'> <%= t(".#{enrollment.status}") %> </span> </td>
            <% else %>
              <td> <span class='badge badge-danger'> <%= t(".#{enrollment.status}") %> </span> </td>
            <% end %>
            <td>
              <% if enrollment.status == 'active' %>
                <%= link_to "Cancelar", enrollment_path(enrollment), { method: :delete, class: 'btn btn-sm btn-danger' }%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
<% else %>
<p>Nenhuma matr√≠cula encontrada</p>
<% end %>