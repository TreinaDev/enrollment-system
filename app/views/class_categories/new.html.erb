<% if flash[:notice] %>
  <div>
    <% if @class_category.errors.any? %>
      <%= render partial: "shared/display_errors", locals: { model: @class_category } %>
    <% end %>
  </div>
<% end %>
<h1> Cadastrar categoria de aula </h1>
<%= form_with model: @class_category do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :responsible_teacher %>
    <%= f.select :responsible_teacher, @responsible_teachers %>
  </div>
  <div>
    <%= f.label 'Ãcone da categoria' %>
    <%= f.file_field :icon %>
  </div>
  <div>
    <%= f.submit 'Cadastrar nova Categoria de Aula' %>
  </div>
<% end %>
